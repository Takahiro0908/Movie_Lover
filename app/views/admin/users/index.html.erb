<div class="container px-5 px-sm-0">
    <div class="col-md-10 offset-md-1">
      <h2>会員一覧</h2>

        <table class='table'>
          <thead>
            <tr>
              <th>プロフィール画像</th>
              <th>名前</th>
              <th>メールアドレス</th>
              <th>会員ステータス</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @user.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(50,50) %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <%= form_with(model:user, url: admin_user_path(user.id), local:true, method: :patch) do |f| %>
                  <td>
                    <%= f.radio_button :status, true, class:"m-1" %>
                    <%= f.label :status, "有効" %>
                    <%= f.radio_button :status, false, class:"m-1" %>
                    <%= f.label :status, "アカウント利用停止" %>
                  </td>
                  <td>
                    <%= f.submit "更新", class: 'btn btn-success' %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>


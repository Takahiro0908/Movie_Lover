<div class="container">
  <!-- ユーザーの詳細 -->
  <div class="row">
    <div class="col-lg-4">
      <div class="d-flex align-items-center justify-content-center">
        <%= image_tag @user.get_profile_image(200,200), class: "rounded-circle" %>
      </div>
      <div class="d-flex align-items-center justify-content-center">
        <%= @user.name %>
      </div>
      <div class="d-flex align-items-center justify-content-center">
        <% if @user.name != "guestuser" %>
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary  edit_user_#{@user.id}" do %>
            <i class="fas fa-user-cog fa-3x"></i>
          <% end %>
        <% end %>
      </div>
    </div>
    <!--<p><%= link_to"お気に入り記事",favorites_user_path(@user) %></p>-->

    <div class="col-lg-8">
      <h2>お気に入り一覧</h2>
        <% @favorite_movies.each do |movie|%>
          <div class="card" style="width: 18rem;">
          <%= link_to movie_path(movie.id) do %>
            <%= image_tag movie.get_image, size: '286x180' %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text"><%= movie.body %></p>
            <p><%= link_to "#{movie.movie_comments.count} コメント", movie_path(movie.id) %></p>
            <!--<a href="#" class="btn btn-primary">Go somewhere</a>-->
          </div>
          </div>
        <% end %>
    </div>
</div>
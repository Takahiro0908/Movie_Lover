<div class="container px-5 px-sm-0">
    <div class="col-md-8 offset-md-1">
      <h2>会員一覧</h2>
        <table class='table'>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @user.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(50,50) %></td>
                <td><%= user.name %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>
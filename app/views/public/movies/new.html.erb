<div class="container">
   <div class="row ml-3 mb-5 mt-3">
      <h2 class="head-line title_h2 text-left bg-light d-inline-block">新規投稿</h2>
    </div>

    <% if @movie.errors.any? %>
      <%= @movie.errors.count %>件のエラーが発生しました
      <ul>
        <% @movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <div class="col-md-6 offset-md-3">
      <%= form_with model: @movie do |f| %>
      　<div class="form-group" >
      　  <%= f.label :image, '商品画像' %>
      　  <%= f.file_field :image, placeholder:"投稿画像", accept:"image/*" %>
        </div>
      　<div class="form-group" >
          <%= f.label :title, 'タイトル' %>
          <%= f.text_field :title, placeholder:"映画タイトル" %>
        </div>
        <div class="form-group">
          <%= f.label :genre_id, 'ジャンル' %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "--選択してください--"} %>
        </div>
        <div class="form-group">
          <%= f.label :body, '内容' %>
          <%= f.text_area :body, placeholder:"映画詳細" %>
        </div>
        <div class="d-grid gap-2 col-6 mx-auto">
         <%= f.submit "新規登録" , class: "btn btn-success"  %>
        </div>
      <% end %>
    </div>
</div>

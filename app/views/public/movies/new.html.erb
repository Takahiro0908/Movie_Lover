<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">新規投稿</h5>
      <div class="form-body p-4">
        <% if @movie.errors.any? %>
          <%= @movie.errors.count %>件のエラーが発生しました
          <% @movie.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
        <%= form_with model: @movie, local:true do |f| %>
          <form>
            <div class="form-group row">
              <label for="inputImage" class="col-sm-2 col-form-label">投稿画像</label>
              <div class="col-sm-10">
                <%= f.file_field :image, placeholder:"投稿画像", accept:"image/*" %>
              </div>
            </div>
            <div class="form-group row">
              <label for="inputTitle" class="col-sm-2 col-form-label">タイトル</label>
              <div class="col-sm-10">
                 <%= f.text_area :title, placeholder:"投稿タイトル" %>
              </div>
            </div>
            <div class="form-group row">
              <label for="inputGenre" class="col-sm-2 col-form-label">ジャンル</label>
              <div class="col-sm-10">
                <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "--選択してください--"} %>
              </div>
            </div>
            <div class="form-group row">
              <label for="inputBody" class="col-sm-2 col-form-label">コメント</label>
              <div class="col-sm-10">
                <%= f.text_area :body, placeholder:"コメントをここに" %>
              </div>
            </div>
            <div class="d-grid gap-2 col-6 mx-auto">
             <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
            </div>
          </form>
        <% end %>
      </div>
  </div>
</div>
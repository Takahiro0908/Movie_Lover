<div class="container">
<h2>検索結果</h2>
  <div class="row">
    <% if @results.present? %>
      <!--検索がヒットした場合-->
      <% @results.each do |result| %>
      <div class="col-md-4 mb-3">
        <div class="card" style='width:100%; height:100%;'>
          <%= link_to movie_path(result.id), {style: "height: 50%;"}  do %>
            <%= image_tag result.get_image, :width =>"100%", :height =>"100%" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= result.title %></h5>
            <p class="card-text"><%= result.body %></p>
            <p><%= link_to "#{result.movie_comments.count} コメント", movie_path(result.id) %></p>
            <!--<a href="#" class="btn btn-primary">Go somewhere</a>-->
          </div>
        </div>
      </div>
      <% end %>
    <% else %>
      <!--検索がヒットしなかった場合-->
      <p>検索結果はありません</p>
    <% end %>
  </div>
</div>